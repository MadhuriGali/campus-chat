{
    "compilerOptions": {
      /* Language and Environment */
      "target": "ES2020",                      /* Specify the target JavaScript language. */
      "module": "ESNext",                      /* Use ES Modules for imports/exports. */
      "lib": ["ES2020"],                       /* Include standard library types. */
      "moduleResolution": "node",             /* Resolve modules using Node.js conventions. */
      "allowSyntheticDefaultImports": true,   /* Allow default imports from modules without default exports. */
      "esModuleInterop": true,                /* Emit additional JavaScript for CommonJS interoperability. */
      "forceConsistentCasingInFileNames": true, /* Enforce consistent import/export casing. */
  
      /* Output */
      "outDir": "./dist",                      /* Specify the output directory for compiled files. */
      "rootDir": "./src",                      /* Specify the root directory for source files. */
      "removeComments": true,                 /* Remove comments from output files. */
      "declaration": true,                    /* Generate .d.ts files for type declarations. */
      "allowJs": true,  
  
      /* Type Checking */
      "strict": true,                         /* Enable all strict type-checking options. */
      // "skipLibCheck": true,                   /* Skip type checking of declaration files. */
  
      /* Source Maps */
      "sourceMap": true                       /* Generate source map files for debugging. */
    },
    "include": ["src"],                       /* Specify the source files to include. */
    "exclude": ["node_modules", "dist"]       /* Exclude unnecessary files from the compilation. */
  }